#!/usr/bin/env bash

self_dir=$(cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd)
.   "$self_dir/utils"

tracefs="/sys/kernel/debug/tracing"

# do_event 'kmem:mm_page_alloc'
do_event() {
    for e in "$@"; do
        echo "$e" >> "$tracefs/set_event"
        run_atexit "echo '!$e' >> $tracefs/set_event"
    done
}

# do_kprobe
# p:myopen:do_sys_open filename=+0(%si):string
do_kprobe() {
    local kprobe
    for k in "$@"; do
       IFS=":" read -r -a kprobe <<< "$k"
       do_run "echo '${kprobe[0]}:${kprobe[1]} ${kprobe[2]}' >> '$tracefs/kprobe_events'"
       run_atexit "echo -:${kprobe[1]} >> $tracefs/kprobe_events"
    done
}

# do_kprobe_enabled
# p:do_sys_open filename=+0(%si):string
# p:myopen:do_sys_open filename=+0(%si):string
do_kprobe_enabled() {
    local kprobe
    for k in "$@"; do
        IFS=":" read -r -a kprobe <<< "$k"
        (( ${#kprobe[@]} == 2 )) && kprobe=("${kprobe[0]}" "${kprobe[2]%% *}" "${kprobe[2]:1}")
        (( ${#kprobe[@]} != 3 )) && err "kprobe err: $1"
        do_kprobe "$(join ':' "${kprobe[@]}")"
        do_event "kprobes:${kprobe[1]}"
    done
}

# do_uprobe
# p:bash:/bin/bash:0x4245c0
do_uprobe() {
    local uprobe
    for u in "$@"; do
        IFS=":" read -r -a uprobe <<< "$u"
        [[ "${uprobe[3]}" != 0x* ]] && uprobe[3]=$(get_addr "${uprobe[2]}" "${uprobe[3]}")
        do_run "echo '${uprobe[0]}:${uprobe[1]} ${uprobe[2]}:${uprobe[3]}' >> $tracefs/uprobe_events"
        run_atexit "echo -:${uprobe[1]} >> $tracefs/uprobe_events"
    done
}

# do_uprobe_enabled
# p:/bin/bash:0x4245c0
# p:bash:/bin/bash:0x4245c0
do_uprobe_enabled() {
    local uprobe
    for u in "$@"; do
        IFS=":" read -r -a uprobe <<< "$u"
        (( ${#uprobe[@]} == 3 )) && uprobe=("${uprobe[0]}" "${uprobe[1]##*/}_${uprobe[2]}" "${uprobe[@]:1}")
        (( ${#uprobe[@]} != 4 )) && err "uprobe err: $1"
        do_uprobe "$(join ':' "${uprobe[@]}")"
        do_event "uprobes:${uprobe[1]}"
    done
}

opt_duration=
opt_stacktrace=

opt_pid=()
opt_followfork=
opt_filter=()

init_event_options() {
    if (( ${#opt_pid[@]} )); then
        echo "${opt_pid[*]}" > "$tracefs/set_event_pid"
        run_atexit "echo > $tracefs/set_event_pid"
        if [[ -n "$opt_followfork" ]]; then
            echo 1 > "$tracefs/options/event-fork"
            run_atexit "echo 0 > $tracefs/options/event-fork"
        fi
    fi
    if (( ${#opt_filter[@]} )); then
        for f in "${opt_filter[@]}"; do
            local e=${f%:*}
            local epath="$tracefs/events/${e//://}"
            echo "${f##*:}" > "$epath/filter"
            run_atexit "echo 0 > $epath/filter"
        done
    fi
}

usage() {
    echo 'usage'
}

main() {
    while (( $# )); do
        case "$1" in
            -d | --duration)
                opt_duration="$2"
                shift
                ;;
            -s | --stacktrace)
                opt_stacktrace=1
                ;;
            -p | --pid)
                opt_pid+=("$2")
                shift
                ;;
            -ff | --follow-fork)
                opt_followfork=1
                ;;
            -f | --filter)
                opt_filter+=("$2")
                shift
                ;;
            -h | --help)
                usage
                exit 0
                ;;
            *)
                break
                ;;
        esac
        shift
    done
    do_main "$@"

    if [[ -n "$opt_stacktrace" ]]; then
        echo 1 > $tracefs/options/stacktrace
        run_atexit "echo 0 > $tracefs/options/stacktrace"
    fi

    echo 1 > "$tracefs/tracing_on"
    run_atexit "echo 0 > $tracefs/tracing_on"

    if [ -n "$opt_duration" ]; then
        run_atexit "cat $tracefs/trace"
        sleep "$opt_duration"
    else
        cat "$tracefs/trace_pipe"
    fi
}
