set -euxo pipefail

die() {
    echo "$@"
    exit 1
}

write_file() {
    fname="$1"
    shift
    if (($# == 0)); then
        echo > "$fname"
    else
        for t in "$@"; do
            echo "$t" >> "$fname"
        done
    fi
}

post_hook=()
run_at_exit() {
    post_hook+=("$@")
}
on_exit() {
    for((i = ${#post_hook[@]} - 1;i >= 0;i--)); do
        ${post_hook[i]}
    done
}
trap on_exit EXIT

tracing_dir="/sys/kernel/tracing"
